<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/histzest">
    <LinearLayout 
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
        <TextView
        android:id="@+id/chartheading"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        android:gravity="center">
    </TextView>
    <TextView
        android:id="@+id/chartaddr"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium" 
        android:gravity="center">
    </TextView>

    <ImageSwitcher
            android:id="@+id/chartswitch"
            android:layout_width="360dp"
            android:layout_height="200dp"
            android:layout_alignLeft="@+id/chartaddr"
            android:layout_below="@+id/chartaddr"
            
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:layout_marginTop="12dp">
            
             
        </ImageSwitcher>
    <LinearLayout
        android:id="@+id/LinearLayout02"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_gravity="center" 
        >

        <Button
            android:id="@+id/btnprev"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:background="#CCCCCC"
            
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:onClick="previous"
            android:text="Previous"
            android:layout_marginTop="25dp" 
            android:layout_alignLeft="@+id/chartswitch"
         android:layout_below="@+id/chartswitch"/>

        <Button
            android:id="@+id/btnnext"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            
            android:background="#CCCCCC"
            android:onClick="next"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:text="Next" 
            android:layout_marginTop="25dp" 
            android:layout_alignLeft="@+id/chartswitch"
         android:layout_below="@+id/chartswitch"/>
    </LinearLayout>
    </LinearLayout>

</ScrollView>
